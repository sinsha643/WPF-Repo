<UserControl x:Class="DisplayRecordsModule.Views.DisplayRecordsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DisplayRecordsModule.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button
                    Width="Auto"
                    HorizontalAlignment="Left"
                    Background="Transparent" Margin="7"
                    BorderBrush="Transparent"
                    BorderThickness="0" ToolTip="Refresh"
                    Command="{Binding SearchCommand}">
                        <Path
                        Width="20"
                        Height="20"
                        Margin="7"
                        Data="M1.6000061,18.200001L11.199982,22.599996 8.6000061,24.400015C10.699982,26.200002 13.299988,27.30001 16.100006,27.30001 21.399994,27.30001 26.100006,23.800009 27.199982,18.700002L27.399994,18.300007 32,18.300007 31.799988,19.099996C30.5,26.599998 23.899994,31.599998 16.100006,31.599998 11.699982,31.599998 7.6999817,29.900017 4.6999817,26.900017L2.5,28.400017z M15.899994,0C20.299988,1.8645551E-07,24.299988,1.6999976,27.299988,4.5999921L29.399994,3.000001 30.299988,13.000004 20.699982,9.1999996 23.299988,7.3999956C21.199982,5.5999926 18.600006,4.5999921 15.799988,4.5999921 10.5,4.5999921 5.7999878,8.3000048 4.6999817,13.399998L4.5,14.300007 0,14.300007 0.19998169,13.000004C1.5,5.5000017,8.1999817,1.8645551E-07,15.899994,0z"
                        Fill="DarkOrange"
                        Stretch="Uniform" />
                    </Button>

                    <Button
                    Content="Add User"
                    HorizontalAlignment="Left"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0" ToolTip="Add"
                    Margin="7, 7, 20,7" Width="25"
                    Height="30">
                    </Button>
                </StackPanel>
                <DataGrid Grid.Row="1" Width="Auto" Margin="0,5,0,0" IsReadOnly="True"
                      ColumnWidth="Auto" AutoGenerateColumns="False"
                      ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="User Id" Binding="{Binding UserId}" Width="*" />
                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*" />
                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*" />
                        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="*"/>
                        <DataGridTextColumn Header="Location" Binding="{Binding Location}" Width="*" />

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
